{
    "manifest_version": 3,
    "version": "1.0.1",
    "name": "Remind Me | ذكرني",
    "description": "Stay connected to Allah in every moment of your day.",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "alarms",
        "notifications",
        "storage"
    ],
    "chrome_url_overrides": {
        "newtab": "newtab/newtab.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "data/adkar.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}